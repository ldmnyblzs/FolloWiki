<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
 
    <lifecycle>
        <phase-listener>
            beans.AuthenticationPhaseListener
        </phase-listener>
    </lifecycle>
    <navigation-rule>
    	<from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>denied</from-outcome>
            <to-view-id>/nopermission.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>denied</from-outcome>
            <to-view-id>/nopermission.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>signup</from-outcome>
            <to-view-id>/usercreate.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>control</from-outcome>
            <to-view-id>/control.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<from-view-id>/usercreate.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>denied</from-outcome>
            <to-view-id>/nopermission.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>signup</from-outcome>
            <to-view-id>/usercreate.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<from-view-id>/control.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>denied</from-outcome>
            <to-view-id>/nopermission.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create</from-outcome>
            <to-view-id>/sub.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<from-view-id>/sub.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>denied</from-outcome>
            <to-view-id>/nopermission.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>control</from-outcome>
            <to-view-id>/control.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
